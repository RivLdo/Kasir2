print("=====================================================")

i = 0
for drinks in itemName:
    print("{:25}".format(itemName[i][0]), itemQuantity[i], "{:>25}".format(f'{itemCount[i]:,}'))
    i += 1

print("=====================================================")
print("{:25}".format("Total Item"), f'{sum(itemQuantity)}', "{:>25}".format(f'{sum(itemCount):,}'))
